<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkIT.Views.ReportProblemPage">
    <ContentPage.Content>
        <StackLayout Padding="10,40,20,20" Spacing="20">
            <StackLayout>
                <Label TextColor="Black" BackgroundColor="Transparent" HorizontalOptions="Center" FontSize="Large" Text="בחר את סוג הבעיה"/>
            </StackLayout>
            <StackLayout>
                <Button  TextColor="#3a66a0" BackgroundColor="Transparent" FontSize="Medium" HorizontalOptions="End" x:Name="buttonDifferentSign" Text="השלט שנסרק אינו תואם לשלט האמיתי" Clicked="ButtonDifferentSign_Clicked"></Button>
                <Button TextColor="#3a66a0" BackgroundColor="Transparent" FontSize="Medium" HorizontalOptions="End" x:Name="buttonOther" Text="בעיה אחרת" Clicked="ButtonOther_Clicked"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>