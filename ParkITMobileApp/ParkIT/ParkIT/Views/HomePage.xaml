<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkIT.Views.HomePage">
    <StackLayout x:Name="stackLayout" Orientation="Vertical"  VerticalOptions="Center">
        <StackLayout Spacing="10" Padding="0,0,0,90">
            <Label TextColor="White" FontSize="30" Text="לחץ לסריקה" HorizontalOptions="Center" BackgroundColor="Transparent"></Label>
            <ImageButton BackgroundColor="Transparent" x:Name="buttonScan" Opacity="0.95" HeightRequest="190" WidthRequest="190" HorizontalOptions="Center" Clicked="ButtonScan_Clicked"></ImageButton>
        </StackLayout>
    </StackLayout>
</ContentPage>